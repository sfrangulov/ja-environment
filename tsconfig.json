{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6"
    ],
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "includes": [
    "./src",
    "./__tests__"
  ]
}